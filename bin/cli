#!/usr/bin/env node
var yargs = require('yargs');

//set language to english
yargs.locale('en');

/* CLI code path */
const src = __dirname + '/../src/cli/';

/* init */
require(src + 'init.js')(yargs);

/* config */
require(src + 'config.js')(yargs);

/* node */
require(src + 'node.js')(yargs);

/* wifi */
require(src + 'wifi.js')(yargs);

/* ls */
require(src + 'ls.js')(yargs);

/* remove */
require(src + 'remove.js')(yargs);

/* status */
require(src + 'status.js')(yargs);

/* restart */
require(src + 'restart.js')(yargs);

/* compile */
require(src + 'compile.js')(yargs);

/* publish */
require(src + 'publish.js')(yargs);

/* version */
require(src + 'version.js')(yargs);

/* help */
require(src + 'help.js')(yargs);

yargs.epilogue("-----------------------").argv;
